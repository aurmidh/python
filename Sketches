#16
import random
orzel=0
reszka=0
lista=["orzel","reszka"]
for i in range(1,100):
    c=random.choice(lista)
    if c=="orzel":
        orzel=orzel+1
    else:
        reszka=reszka+1
print("orzel", orzel)
print("reszka", reszka)


#17
import random
liczba=random.randint(1,10)
for i in range(3):
    proba=int(input("podaj liczbe"))
    if proba==liczba:
        print("Udalo sie")
    elif proba<liczba:
        print("liczba jest wieksza")
    else:
        print("liczba jest mnejsza")
    
